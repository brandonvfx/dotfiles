[core]
	editor = emacs


[difftool "Kaleidoscope"]
	cmd = ksdiff-wrapper git \"$LOCAL\" \"$REMOTE\"
[difftool]
	prompt = false
[diff]
	tool = Kaleidoscope

[merge]
	keepBackup = false;
	tool = p4merge

[mergetool "p4merge"]
 	cmd = p4merge "$BASE" "$LOCAL" "$REMOTE" "$MERGED"
	keepTemporaries = false
	trustExitCode = false
	keepBackup = false

[alias]
	st = status
	ci = commit -a
	co = checkout
	tags = tag -n1 -l

[color]
	branch = auto
	status = auto
	interactive = auto
	ui = true

[color "branch"]
       current = green reverse
       local = green
       remote = cyan

[color "status"]
       added = green
       changed = yellow
       untracked = red

[core]
	excludesfile = ~/.gitignore

